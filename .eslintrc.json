{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "installedESLint": true,
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "eslint-plugin-react"
    ],
    "rules": {
        "max-len": [1, 120, 2, {"ignoreComments": true}],
        "indent": [2, 4, {"SwitchCase": 1}],
        "linebreak-style": [],
        "quotes": [0, "double"],
        "semi": [2, "always"],
        "react/jsx-uses-react": [1],
        "react/jsx-uses-vars": [2]
    }
}
